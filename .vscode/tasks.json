{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PostgreSQL起動（Windows）",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "pg_ctl -D $env:USERPROFILE\\scoop\\apps\\postgresql\\current\\data -l $env:USERPROFILE\\scoop\\apps\\postgresql\\current\\logfile start"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "windows": {
        "command": "powershell"
      }
    },
    {
      "label": "テスト実行",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "pytest",
        "-v"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "テスト実行（カバレッジ）",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "pytest",
        "--cov=app",
        "--cov-report=html",
        "--cov-report=term"
      ],
      "problemMatcher": []
    },
    {
      "label": "Ruff チェック",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "ruff",
        "check",
        "src",
        "tests"
      ],
      "problemMatcher": []
    },
    {
      "label": "Ruff フォーマット",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "ruff",
        "format",
        "src",
        "tests"
      ],
      "problemMatcher": []
    },
    {
      "label": "Alembic マイグレーション作成",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "alembic",
        "revision",
        "--autogenerate",
        "-m",
        "${input:migrationMessage}"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src"
      },
      "problemMatcher": []
    },
    {
      "label": "Alembic マイグレーション適用",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "alembic",
        "upgrade",
        "head"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "migrationMessage",
      "type": "promptString",
      "description": "マイグレーションメッセージを入力してください",
      "default": "migration"
    }
  ]
}

{
  // Python設定
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
  "python.terminal.activateEnvironment": true,
  "python.analysis.extraPaths": ["${workspaceFolder}/src"],

  // Ruffを使用（pyproject.tomlの設定に従う）
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },

  // Ruff設定
  "ruff.enable": true,
  "ruff.importStrategy": "fromEnvironment",
  "ruff.lint.enable": true,

  // ファイル除外設定
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/.mypy_cache": true,
    "**/.coverage": true,
    "**/htmlcov": true
  },

  // 検索除外設定
  "search.exclude": {
    "**/.venv": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/uv.lock": true
  },

  // Python Testing
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": ["tests"],

  // エディタ設定
  "editor.rulers": [120],
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 4,

  // ファイル設定
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.eol": "\n",

  // IntelliSense設定
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,

  // 環境変数ファイル
  "python.envFile": "${workspaceFolder}/.env.local",

  // ========================================
  // TODO Tree設定
  // ========================================
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "HACK",
    "NOTE",
    "BUG",
    "XXX",
    "OPTIMIZE"
  ],
  "todo-tree.highlights.defaultHighlight": {
    "icon": "check",
    "type": "text",
    "opacity": 50
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "checklist",
      "foreground": "#ffffff",
      "background": "#0098ff",
      "iconColour": "#0098ff"
    },
    "FIXME": {
      "icon": "alert",
      "foreground": "#ffffff",
      "background": "#ff0000",
      "iconColour": "#ff0000"
    },
    "HACK": {
      "icon": "tools",
      "foreground": "#000000",
      "background": "#ffa500",
      "iconColour": "#ffa500"
    },
    "NOTE": {
      "icon": "note",
      "foreground": "#ffffff",
      "background": "#00aa00",
      "iconColour": "#00aa00"
    },
    "BUG": {
      "icon": "bug",
      "foreground": "#ffffff",
      "background": "#ff1744",
      "iconColour": "#ff1744"
    },
    "OPTIMIZE": {
      "icon": "flame",
      "foreground": "#000000",
      "background": "#ffeb3b",
      "iconColour": "#ffeb3b"
    }
  },

  // ========================================
  // Error Lens設定
  // ========================================
  "errorLens.enabledDiagnosticLevels": ["error", "warning", "info", "hint"],
  "errorLens.fontSize": "0.9em",
  "errorLens.fontWeight": "400",
  "errorLens.messageTemplate": "$message",
  "errorLens.delay": 500,

  // ========================================
  // Docker/YAML設定
  // ========================================
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.formatOnSave": true
  },
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced"
  },
  "[dockerfile]": {
    "editor.formatOnSave": true
  },
  "yaml.schemas": {
    "https://json.schemastore.org/docker-compose.json": "docker-compose*.yml"
  },
  "yaml.format.enable": true,
  "yaml.validate": true,
  "yaml.customTags": ["!reference sequence"],
  "sqltools.connections": [
    {
      "ssh": "Disabled",
      "previewLimit": 50,
      "server": "127.0.0.1",
      "port": 5432,
      "driver": "PostgreSQL",
      "name": "GenAI App PostgreSQL",
      "database": "genai_app",
      "username": "postgres",
      "password": "postgres",
      "pgOptions": {
        "ssl": false
      },
      "connectionTimeout": 30
    }
  ],
  "python-envs.pythonProjects": []
}

# Application Configuration
APP_NAME=AI Agent App
VERSION=0.1.0
DEBUG=true
HOST=0.0.0.0
PORT=8000
ALLOWED_ORIGINS=*

# Environment
ENVIRONMENT=development

# Database
DATABASE_URL=sqlite+aiosqlite:///./app.db

# Storage Configuration
STORAGE_BACKEND=local
LOCAL_STORAGE_PATH=./uploads

# Azure Storage (for staging/production)
# AZURE_STORAGE_CONNECTION_STRING=your_connection_string_here
# AZURE_STORAGE_CONTAINER_NAME=uploads

# LLM Configuration
# Anthropic
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI
# OPENAI_API_KEY=your_openai_api_key_here

# Azure OpenAI (for staging/production)
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
# AZURE_OPENAI_API_VERSION=2024-02-15-preview
# AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# LangSmith (optional - for tracing and monitoring)
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=your_langsmith_api_key_here
# LANGCHAIN_PROJECT=ai-agent-app

# File Upload
MAX_UPLOAD_SIZE=10485760

# Security
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
